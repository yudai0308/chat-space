.side-bar
  .user-info
    .user-name
      %p
        = current_user.name
    .editing
      = link_to "", "/groups/new", class: "create-group fa-pencil-square-o"
      = link_to "", "/users/:id/edit", class: "edit-acount fa-cog"
  .group-info
    .created-group
      - current_user.groups.each do |group|
        =link_to group_messages_path(group) do
          %ul.group-list
            %li.group-list__name= group.name
            %li.group-list__comment メッセージはまだありません
